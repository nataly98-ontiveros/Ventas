@model DateTime?

@if (Model != null)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
else
{
    <input type="date" value="@Model.Value.ToString("yyyy-MM-dd")" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
