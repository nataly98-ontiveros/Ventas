@model Ecommerce.Models.Provedores
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Proveedor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                <div class="col-md-1">
                    <label>Nombre:</label>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new {  @placeholder = "ej. Alejandro", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-1">
                    <label>Telefono:</label>
                </div>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @placeholder = "ej. 7224125555", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="row">
                
                <div class="col-md-1">
                    <label>Correo:</label>
                </div>
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Correo, new { htmlAttributes = new {  @id = "tp_lcd_ta", @placeholder = "ej. correro@hotmail.com", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        

        <div class="form-group">

            <input type="submit" value="Guardar" class="btn btn-success" />

        </div>
    </div>

}
<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

