<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - FARMACIA : ONLINE</title>

    <!-- Custom fonts for this template-->
    <link href="/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS -->
    <link href="/Content/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Content/css/sb-admin.css" rel="stylesheet">


</head>
<body id="page-top">
    <nav class="navbar navbar-expand navbar-light static-top" style="background-color: #A2C9E7">

        <a class="navbar-brand mr-1" href="@Url.Action("Index", "Home")">FARMACIA : ONLINE</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>



        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0"></ul>
        <ul>
            @Html.Partial("_LoginAdmin")
        </ul>
    </nav>

    <div id="wrapper">

        <ul class="sidebar navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="almacenDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-search"></i>
                    <span>Almacen</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="almacenDropdown">

                    <a>@Html.ActionLink("Productos", "Index", "Productos", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Categorías", "Index", "Catalogos1", new object { }, new { @class = "dropdown-item" })</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="finanzasDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Finanzas</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="finanzasDropdown">

                    <a>@Html.ActionLink("Ver Proveedores", "Index", "Proveedores", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Ver Historial de Compras", "Index", "Compras", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Ver Inventario", "Detalle_Compra", "Compras", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Ver Historial de Ventas", "Index", "Ventas", new object { }, new { @class = "dropdown-item" })</a>
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="ventasDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Ventas</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="ventasDropdown">
                    <a>@Html.ActionLink("Propuesta de precios", "Index", "Precios", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Precios Aut. ProdNuevos ", "Index", "PreciosAutorizados", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Promociones", "Index", "ActualizarPrecios", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Precios Aut. ProdExis ", "Index", "PreciosAutorizadosExis", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Ver-Devoluciones", "Index", "Devolucion", new object { }, new { @class = "dropdown-item" })</a>
                    
                </div>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="empleadosDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-fw fa-user-circle"></i>
                    <span>Empleado</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="empleadosDropdown">
                    <a>@Html.ActionLink("Recursos Humanos", "IndexRH", "Empleados", new object { }, new { @class = "dropdown-item" })</a>
                    <a>@Html.ActionLink("Administración", "Index", "Empleados", new object { }, new { @class = "dropdown-item" })</a>
                </div>
            </li>
        </ul>

    <div id="content-wrapper">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year, FARMACIA : ONLINE. Todos los derechos reservados.</p>
            </footer>
        </div>

    </div>
    </div>
    <!-- /.content-wrapper -->
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

  
    @RenderSection("scripts", required: false)
    <script src="Content/vendor/jquery/jquery.min.js"></script>
    <script src="Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="Content/js/sb-admin.min.js"></script>
 
    <script src="https://kit.fontawesome.com/d9e9a292ac.js" crossorigin="anonymous"></script>


</body>
</html>
