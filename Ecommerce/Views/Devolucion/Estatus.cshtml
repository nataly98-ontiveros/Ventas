
@{
    ViewBag.Title = "Estatus";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditDevolucion</h2>

<div class="form-horizontal">
    <h4>Devolucion</h4>
    <hr />

    <div class="form-group">
        <label>Status de la devolución</label>
        <div class="col-md-10">
            <input value="Aceptada" />
        </div>
    </div>

    <div class="form-group">
        <label>Descripción del Status de devolución</label>
        <div class="col-md-10">
            <textarea cols="100" rows="5">Fechas validas y motivos validos</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>

</div>

<div>
    @Html.ActionLink("Regresar a ver Solicitudes de Devolución", "Index")
</div>

