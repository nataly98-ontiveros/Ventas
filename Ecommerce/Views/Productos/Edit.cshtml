@model Ecommerce.Models.Productos
@using Ecommerce.Models
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">Productos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row justify-content-center align-content-center">
            <div class="col-md-offset-2">
                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Url_image, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        <input type="file" name="file" id="file" required />
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Sabor, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Sabor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sabor, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center" id="activo">
                    @Html.LabelFor(model => model.activo, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.activo)
                            @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Costo_unitario, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Costo_unitario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Costo_unitario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Porcentage_descuento, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Porcentage_descuento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Porcentage_descuento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center" id="status">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Time_Mount, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Time_Mount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Time_Mount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Time_Day, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Time_Day, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Time_Day, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Precio_final, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Precio_final, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Precio_final, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" id="cant_ventas">
                    @Html.LabelFor(model => model.Cantidad_ventas, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Cantidad_ventas, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cantidad_ventas, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    @Html.LabelFor(model => model.Catalogos, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-12">
                        @foreach (Catalogos catalogo in ViewBag.catalogos)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@catalogo.Id" name="Catalogos" id="Catalogos">
                                <label class="form-check-label" for="Catalogos">
                                    @catalogo.name
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-12 text-center">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                </div>
                <div class="col-md-12 text-center btn btn-dark text-white">
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
           
        </div>

    </div>
}
    <script>

        document.getElementById("status").style.display = "none";
        document.getElementById("activo").style.display = "none";
        document.getElementById("cant_ventas").style.display = "none";

    </script>

