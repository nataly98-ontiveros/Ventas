@model Ecommerce.Models.Empleados

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container mt-5">
        <div class="row">
            <h5>Informacion general</h5>
        </div>
        <div class="row justify-content-start mt-1">
            <div class="col-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </dt>

                    <dd>
                        @(Model.Sexo ? "Hombre" : "Mujer")
            
                    </dd>

                    <dt>
                        Fecha de Nacimiento
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fecha_Nacimeinto)
                    </dd>

                </dl>
            </div>

            <div class="col-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Area)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Area)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Puesto)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Puesto)
                    </dd>


                    <dt>
                        @Html.DisplayNameFor(model => model.Salario)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Salario)
                    </dd>
                </dl>
            </div>

        </div>

        <div class="row mt-2">
            <h5>Direccion</h5>
        </div>

        <div class="row justify-content-start mt-1">
            <div class="col-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Estado)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Municipio)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Municipio)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CodigoPostal)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CodigoPostal)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Colonia)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Colonia)
                    </dd>

                </dl>
            </div>

            <div class="col-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Calle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Calle)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NoInterior)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NoInterior)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.NoExterior)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NoExterior)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Referencia)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Referencia)
                    </dd>

                </dl>
            </div>
        </div>

        @if (ViewBag.privilegio == "RH")
        {
            <p>
                @Html.ActionLink("Editar", "EditRH", new { id = Model.Id }, new { @class = "btn btn-primary text-white" })
                @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-primary text-white" })
            </p>
        }
        else if (ViewBag.privilegio == "AD") { 
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary text-white" })
                @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-primary text-white" })
            </p>
        }

    </div>
        
