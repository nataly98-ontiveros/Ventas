@model Ecommerce.Models.Empleados
@using Microsoft.AspNet.Identity.EntityFramework

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-3 ml-5">
        @Html.ActionLink("Volver", "Index", new { }, new { @class = "btn btn-primary text-white" })
    </div>

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Correo electronico</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Correo electronico" name="Email" required="true">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Contraseña</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña" name="Password" required="true">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword2">Confirmar Contraseña</label>
                            <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password" name="ConfirmPassword" required="true">
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Nombre" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })

                        </div>


                        <div class="form-group">
                            <label for="exampleInputEmail1">Nombre de usuario</label>
                            <input type="text" class="form-control" id="exampleInputName" aria-describedby="emailHelp" placeholder="Nombre de usuario" name="UserName" required="true">
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.DropDownListFor(model => model.Sexo, new SelectList(
                                        new[]
                                        {
                                            new { Value = "true" , Text = "Hombre" },
                                            new { Value = "false", Text = "Mujer" },
                                        },
                                        "Value",
                                        "Text",
                                        Model
                                ), new { @class = "form-control" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Area, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Area, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Area" } })
                            @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Puesto, htmlAttributes: new { @class = "control-label col-md-2" })

                            @Html.EditorFor(model => model.Puesto, new { htmlAttributes = new { @class = "form-control", @required = true, @placeholder = "Puesto" } })
                            @Html.ValidationMessageFor(model => model.Puesto, "", new { @class = "text-danger" })

                        </div>

                        <strong class="my-2">Roles</strong>

                        <div class="form-check my-3">

                            @foreach (IdentityRole rol in ViewBag.Roles)
                            {

                                <input class="form-check-input" type="checkbox" value="@rol.Name" id="@rol.Name" name="roles">
                                <label class="form-check-label" for="@rol.Name">
                                    @rol.Name
                                </label>
                                <br />

                            }
                        </div>
                    </div>
                 </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Agregar empleado" class="btn btn-primary text-white" />
                        </div>
                    </div>
                </div>
        </div>
    </div>


}


